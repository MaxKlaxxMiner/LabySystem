<Page
    x:Class="LabyMobile.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Height="640"
    Width="380">

  <Grid>
    <Image x:Name="TestBild" HorizontalAlignment="Left" Height="380" VerticalAlignment="Top" Width="380" Source="Assets/Logo.png" Tapped="Image_Tapped"/>
    <Image x:Name="ButtonLeft" HorizontalAlignment="Left" Height="80" VerticalAlignment="Bottom" Width="80" Source="Assets/Logo.png" Tapped="ButtonLeft_Tapped" Margin="40,0,40,20"/>
    <Image x:Name="ButtonRight" HorizontalAlignment="Right" Height="80" VerticalAlignment="Bottom" Width="80" Source="Assets/Logo.png" Tapped="ButtonRight_Tapped" Margin="40,0,40,20"/>
    <Image x:Name="ButtonUp" HorizontalAlignment="Center" Height="80" VerticalAlignment="Bottom" Width="80" Source="Assets/Logo.png" Tapped="ButtonUp_Tapped" Margin="40,0,40,130"/>
    <Image x:Name="ButtonDown" HorizontalAlignment="Center" Height="80" VerticalAlignment="Bottom" Width="80" Source="Assets/Logo.png" Tapped="ButtonDown_Tapped" Margin="40,0,40,20"/>
  </Grid>
</Page>
